<UserControl x:Class="KayseriScada.UserControls.TrackCircuitUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KayseriScada.UserControls"
             mc:Ignorable="d" Width="65" Height="51">
   

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="12"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="12"></RowDefinition>
            </Grid.RowDefinitions>
            <Path x:Name="tc" Data="M0,0 L75,0 L75,35 L0,35 z" Fill="Gray" Grid.Row="1" Stretch="Fill"/>
            <TextBlock Text="TC" VerticalAlignment="Center"  HorizontalAlignment="Center" FontSize="8" Grid.Row="0" x:Name="topText" FontWeight="Bold"/>
            <TextBlock Visibility="Collapsed" Text="TC" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"  x:Name="bottomText" FontWeight="Bold" Grid.Row="2"/>


        </Grid>

  
</UserControl>
